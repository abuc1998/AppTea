<!-- res/layout/activity_main.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ui.home.HomeFragment"
    android:background="@drawable/app_background">

    <FrameLayout
        android:id="@+id/firstPart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txtdashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/dashboard_header"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/app_moto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtdashboard"
                android:text="Tako Tai"
                android:fontFamily="@font/poppins"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_moto"
                android:src="@drawable/ic_baseline_cloud_24"
                android:id="@+id/weather"/>

            <TextView
                android:id="@+id/todays_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weather"
                android:fontFamily="@font/poppins"
                android:text="Todays Weather"
                android:textSize="20sp" />
            
            <TextView
                android:layout_below="@id/todays_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:fontFamily="sans-serif-thin"
                android:text="25"
                />
            
        </RelativeLayout>



    </FrameLayout>


    <FrameLayout
        android:id="@+id/secondPart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bar_chart"/>
        
        

    </FrameLayout>


    <FrameLayout
        android:id="@+id/thirdPart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <com.github.mikephil.charting.charts.PieChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pie_chart"/>

    </FrameLayout>

</LinearLayout>
