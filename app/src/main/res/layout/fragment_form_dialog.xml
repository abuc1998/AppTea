<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.employees.FormDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        android:padding="16dp">

        <!-- Employee Name -->
        <EditText
            android:id="@+id/editTextEmployeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Employee Name"/>

        <!-- Age -->
        <EditText
            android:id="@+id/editTextEmployeeAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Age"/>

        <!-- Phone Number -->
        <EditText
            android:id="@+id/editTextEmployeePhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Phone Number"/>

        <!-- ID -->
        <EditText
            android:id="@+id/editTextEmployeeID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="ID"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSaveEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Employee"/>

    </LinearLayout>

</FrameLayout>
